<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--BannerView-->
    <declare-styleable name="BannerView">
        <attr name="bannerCanLoop" format="boolean" />
        <attr name="bannerCoverWidth" format="dimension" />
        <attr name="bannerCoverPadding" format="dimension" />
        <attr name="bannerFarMargin" format="dimension" />
        <attr name="bannerPageScale" format="float" />
        <attr name="bannerPageAlpha" format="float" />
        <attr name="bannerPagePercent" format="float" />
        <attr name="bannerMode">
            <enum name="normal" value="0" />
            <enum name="cover" value="1" />
            <enum name="far" value="2" />
        </attr>
        <attr name="indicatorPaddingLeft" format="dimension" />
        <attr name="indicatorPaddingRight" format="dimension" />
        <attr name="indicatorPaddingTop" format="dimension" />
        <attr name="indicatorPaddingBottom" format="dimension" />
        <attr name="indicatorAlign">
            <enum name="left" value="0" />
            <enum name="center" value="1" />
            <enum name="right" value="2" />
        </attr>


    </declare-styleable>

</resources>